<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.tictactoe.GameController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>

          <Button id="B0"  text="" GridPane.rowIndex="0" GridPane.columnIndex="0"
                maxWidth="90" prefWidth="90" minWidth="10"
                maxHeight="90" prefHeight="90" minHeight="10"
                  onAction="#onB0ButtonClick"/>
         <Button id="B1"  text="" GridPane.rowIndex="0" GridPane.columnIndex="1"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB1ButtonClick"/>
         <Button id="B2"  text="" GridPane.rowIndex="0" GridPane.columnIndex="2"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB2ButtonClick"/>
         <Button id="B3"  text="" GridPane.rowIndex="1" GridPane.columnIndex="0"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB3ButtonClick"/>
         <Button id="B4"  text="" GridPane.rowIndex="1" GridPane.columnIndex="1"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB4ButtonClick"/>
         <Button id="B5"  text="" GridPane.rowIndex="1" GridPane.columnIndex="2"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB5ButtonClick"/>
         <Button id="B6"  text="" GridPane.rowIndex="2" GridPane.columnIndex="0"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB6ButtonClick"/>
         <Button id="B7"  text="" GridPane.rowIndex="2" GridPane.columnIndex="1"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB7ButtonClick"/>
         <Button id="B8"  text="" GridPane.rowIndex="2" GridPane.columnIndex="2"
                 maxWidth="90" prefWidth="90" minWidth="10"
                 maxHeight="90" prefHeight="90" minHeight="10"
                 onAction="#onB8ButtonClick"/>
      </children>
   </GridPane>
   <Button onAction="#onBackButtonClick" text="Back to Main Menu" />
</VBox>

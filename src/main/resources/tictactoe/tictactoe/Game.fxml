<VBox alignment="CENTER" prefHeight="550.0" prefWidth="380.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.tictactoe.GameController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="O                    /                    X" />
   <Slider fx:id="slider" blockIncrement="1.0" majorTickUnit="1.0" max="1.0" maxWidth="150.0" minWidth="150.0" minorTickCount="0" prefWidth="150.0" showTickMarks="true" snapToTicks="true">
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </Slider>
   <Text fx:id="info" strokeType="OUTSIDE" strokeWidth="0.0" text="The game is on!" textAlignment="CENTER" wrappingWidth="200.0">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Text>
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
     </rowConstraints>

          <Button fx:id="B0" maxHeight="90" maxWidth="90" minHeight="10" minWidth="10" onAction="#onB0ButtonClick" prefHeight="90" prefWidth="90" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <font>
               <Font size="36.0" />
            </font></Button>
         <Button fx:id="B1" maxHeight="90" maxWidth="90" minHeight="10" minWidth="10" onAction="#onB1ButtonClick" prefHeight="90" prefWidth="90" GridPane.columnIndex="1" GridPane.rowIndex="0">
             <font>
                 <Font size="36.0" />
             </font></Button>
         <Button fx:id="B2" maxHeight="90" maxWidth="90" minHeight="10" minWidth="10" onAction="#onB2ButtonClick" prefHeight="90" prefWidth="90" GridPane.columnIndex="2" GridPane.rowIndex="0">
             <font>
